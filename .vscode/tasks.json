{
  "tasks": [
    {
      // ctrl + shift + b
      "type": "cppbuild",
      "label": "C/C++: g++ build active file :3",
      "command": "/usr/bin/g++",
      "args": [
        //^ default
        "-std=c++23",
        "-fdiagnostics-color=always",
        "-g",
        //^ my
        "-fsanitize=address,undefined,leak",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "-Werror",
        //^ C_Cpp_Runner.buildSingleFile
        "-Wpedantic",
        // "-Wshadow",
        "-Wformat=2",
        "-Wcast-align",
        "-Wconversion",
        // "-Wsign-conversion",
        "-Wnull-dereference",
        ////
        "${file}",
        "-o",
        "${fileDirname}/out/${fileBasenameNoExtension}",
        ////
        "&&", //^ run created file
        "kitty",
        "--hold",
        "${fileDirname}/out/${fileBasenameNoExtension}"

        ////
        // "2>", //^ output to file
        // "${fileDirname}/out.txt"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger and modified by me :3"
    },
